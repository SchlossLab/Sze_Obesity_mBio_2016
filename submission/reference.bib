	keywords = {16S, Adult, Africa, Biodiversity, Dizygotic, Environment, Europe, Feces, Female, Gastrointestinal Tract, Genotype, Humans, Metagenome, Missouri, Molecular Sequence Data, Monozygotic, Mothers, Obesity, Ribosomal, RNA, Thinness, Twins},
